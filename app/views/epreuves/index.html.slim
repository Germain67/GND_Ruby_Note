.page-header
  h1 Liste de vos épreuves

table.table.table-bordered
  tr
    th Epreuve
    th Date
    th Editer
    th Supprimer
  - @epreuves.each do |epreuve|
    tr
      td
        - if can? :manage, Epreuve
        	= link_to show_epreuve_path(epreuve) do
        		= epreuve.titre
        - else
          = epreuve.titre
      td= epreuve.date_examen
      - if can? :manage, Epreuve
        td#editTD
        	= link_to edit_epreufe_path(epreuve) do
        		span.glyphicon.glyphicon-pencil aria-hidden="true"
      - if can? :manage, Epreuve
        td#deleteTD
          = link_to glyph(:remove), epreuves_destroy_path(epreuve), :method => "delete", data: {confirm: "Etes vous sûr de vouloir supprimer cette épreuve ?", commit: "Supprimer", cancel: "Annuler", title: "Confirmation"}
- if can? :manage, Epreuve
  = link_to epreuves_new_path do
    .btn.btn-default Créer une nouvelle épreuve